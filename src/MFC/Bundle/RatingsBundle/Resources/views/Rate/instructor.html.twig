{% extends 'MFCRatingsBundle::layout.html.twig' %}

{% block title %}{{ maplet.name }}{% endblock %}

{% block mapletName %}
	<h2>Evaluating: {{ maplet.name }}</h2>
{% endblock %}

{% form_theme form _self %}
{% block form_row %}
	<div class="form-group">
		{{ form_label(form) }}
		{{ form_errors(form) }}
		{{ form_widget(form) }}
	</div>
{% endblock %}

{% block main %}
	{{ form_start(form) }}
		<div class="form-custom-group">
			{{ form_row(form.methodUsed) }}
			{{ form_row(form.methodUsedOther) }}
		</div>
		<div class="form-custom-group">
			{{ form_row(form.skillsDeveloped) }}
			{{ form_row(form.skillsDevelopedOther) }}
		</div>
		{{ form_row(form.rating) }}
		{{ form_row(form.comments) }}
		{{ form_row(form.submit) }}
	{{ form_end(form) }}
{% endblock %}